<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juanmuller.InfoActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtCodigo"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="Código: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvCodigo2"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="Texto1"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="-52dp" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="Descripción: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="Texto2"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-52dp"/>

    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="Precio: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="Texto3"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="-52dp"/>

    <TextView
        android:id="@+id/txtCantidad"
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="Cantidad: "
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="205dp"
        android:layout_height="100dp"
        android:hint="Ingresar Cantidad"
        android:textSize="25dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-72dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnAgregar"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="#A9C0FF"/>

    <Button
        android:id="@+id/btnVerListado"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Listado"
        android:textStyle="bold"
        android:layout_marginTop="-49dp"
        android:layout_marginLeft="180dp"
        android:background="#A9C0FF"/>

    <Button
        android:id="@+id/btnVolver"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textStyle="bold"
        android:layout_marginTop="-49dp"
        android:layout_marginLeft="410dp"
        android:background="#A9C0FF"/>
</LinearLayout>